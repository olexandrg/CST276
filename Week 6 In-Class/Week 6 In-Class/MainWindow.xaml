<Window x:Class="Week_6_In_Class.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week_6_In_Class"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightBlue">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name ="TxtBlock" FontSize="50" FontFamily="Script MT Bold">
                Hello World!
            </TextBlock>
            <Button BorderThickness="2" BorderBrush="Crimson" Background="LightYellow" FontStyle="Oblique" FontSize ="30" Click="ButtonBase_OnClick" Width="150" Height="46"> 
                Click me!
            </Button>
        </StackPanel>
    </Grid>
</Window>
